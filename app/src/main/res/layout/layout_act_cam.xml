<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example_cam_photo.Cam_Activity$PlaceholderFragment" >

    <TextView
        android:id="@+id/uploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Upload Status"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/uploadStatus"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_upload"
        android:layout_alignBottom="@+id/bt_upload"
        android:layout_alignRight="@+id/iv"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_layout"
        android:text="Take a Photo" />

    <Button
        android:id="@+id/bt_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="25dp"
        android:visibility="invisible"
        android:background="@drawable/button_layout"
        android:text="Upload" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Local Image Path"
        android:id="@+id/tv"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
